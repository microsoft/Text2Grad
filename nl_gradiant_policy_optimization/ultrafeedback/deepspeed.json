{
    "train_batch_size": 64,
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 8,
  
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 1e-6,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
  
    "scheduler": {
      "type": "WarmupLR",
      "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": 1e-6,
        "warmup_num_steps": 50
      }
    },
  
    "zero_optimization": {
      "stage": 1,
      "reduce_bucket_size": 2e8,
      "allgather_bucket_size": 2e8,
      "overlap_comm": true,
      "contiguous_gradients": true},
    "gradient_clipping": 1.0,
    "fp16": {
      "enabled": true,
      "auto_cast": true,
      "loss_scale": 0,
      "initial_scale_power": 16,
      "loss_scale_window": 1000,
      "hysteresis": 2,
      "min_loss_scale": 1
    },
  
    "steps_per_print": 100,
    "wall_clock_breakdown": false
  }